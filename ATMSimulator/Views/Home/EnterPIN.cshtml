@{
    ViewData["Title"] = "Enter PIN";
}

<div style="text-align: center; margin-top: 50px;">
    <h2>Enter Your PIN</h2>
    <p>Card Number: @ViewBag.CardNumber</p>

    <form method="post" action="@Url.Action("AuthenticatePIN", "Home")">
        <input type="hidden" name="cardNumber" value="@ViewBag.CardNumber" />

        <input type="password" name="pin" placeholder="Enter PIN" required
               style="padding: 10px; font-size: 16px; width: 250px;" />

        <br><br>
        <button type="submit" style="padding: 10px 20px; font-size: 18px; cursor: pointer;">
            Submit
        </button>
    </form>
</div>
